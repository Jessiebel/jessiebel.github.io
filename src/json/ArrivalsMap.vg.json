{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "Incoming Travelers by Country of Citizenship (1991-2023)"
  },

  "width": "container",
  "height": 400,

  "config": {
    "font": "Lora",
    "title": {
      "font": "Lora",
      "fontSize": 20,
      "fontWeight": "bold",
      "anchor": "middle"
    },
    "legend": {
      "labelFont": "Lora",
      "titleFont": "Lora",
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "text": {
      "font": "Lora"
    }
  },


  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],


  "projection": {
    "type": "equalEarth"
  },


  "layer": [
    {
      "data": {
        "name": "Background",
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#63b5fc",
        "strokeWidth": 1,
        "fill": "#a9daf1"
      }
    },


    {
      "mark": {
        "type": "geoshape",
        "stroke": "#63b5fc"
      },
      "data": {
        "name": "graticule",
        "graticule": true
      }
    },


    {
      "data": {
        "name": "globalCoords",
        "url": "https://raw.githubusercontent.com/Jessiebel/DataVisulisation2/refs/heads/main/DataVisualisation2/data/globalCoords.topojson",
        "format": {
          "type": "topojson",
          "feature": "globalCoords"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#aeaeae",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },


    {
      "data": {
        "name": "Arrivals",
        "url": "https://raw.githubusercontent.com/Jessiebel/DataVisulisation2/refs/heads/main/DataVisualisation2/data/Cleaned_Arrivals_by_Year.csv"
      },

      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "name": "globalCoords",
              "url": "https://raw.githubusercontent.com/Jessiebel/DataVisulisation2/refs/heads/main/DataVisualisation2/data/globalCoords.topojson",
              "format": {
                "type": "topojson",
                "feature": "globalCoords"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },

        {"filter": "datum.Year == Year_selection"}
      ],

      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },

      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },

        "color": {
          "field": "Total_Arrivals",
          "type": "quantitative",
          "scale": {
            "domain": [0, 100, 1000, 10000, 100000, 1000000, 10000000],
            "range": ["#f0f0f0", "#ffcc80", "#ffb74d", "#ffa726", "#fb8c00", "#ef6c00"]
          },
          "legend": {
            "title": "Total Arrivals",
            "tickCount": 6,
            "titleFontSize": 15,
            "labelFontSize": 12,
            "orient": "right"
          }
        },

        "tooltip": [
          {
            "field": "Country",
            "title": "Country"
          },
          {
            "field": "Total_Arrivals",
            "title": "Number of Travellers",
            "format":",.0f"
          }
        ]
      }
    }


  ]
}
